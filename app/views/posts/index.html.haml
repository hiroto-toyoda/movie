.contents.row
  .taro
  - @posts.each do |post|
    .content_post{:style => "background-video: url(#{post.video});"}
      .post_image
        = link_to post_path(post) do
          = video_tag post.video.to_s, class: "img"
      %table.table.table-bordered
        %tr
          %th.col-sm
            = simple_format(post.body)
            %span.name
        %tr
          %th
            %a{:href => ""}
              %span 投稿者
              = post.user.nickname
        %tr
          %th
            .more
              %ul.more_list
                %li
                  = link_to '詳細', "/posts/#{post.id}", method: :get, class: "new-post btn btn-info"
                %li
                  = link_to '削除', "/posts/#{post.id}", method: :delete, class: "new-post btn btn-info"
